{
  "name": "Package",
  "description": "Schema specification for UPM packages which combine functionality found in NPM, Composer and Component package managers.",
  "version": "0.1.0",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name; does not have to include the Vendor Name prefix."
    },
    "version": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "description": "Short package description."
    },
    "repository": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "git"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "private": {
      "type": "boolean",
      "default": false
    },
    "authors": {
      "type": [ "array", "string" ],
      "description": "List of authors that contributed to the package. This is typically the main maintainers, not the full list.",
      "items": {
        "type": "object",
        "required": false,
        "properties": {
          "email": {
            "type": "string",
            "required": false
          },
          "homepage": {
            "type": "string",
            "required": false
          },
          "name": {
            "type": "string",
            "required": false
          },
          "role": {
            "type": "string",
            "required": false
          }
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "component-dir": {
          "description": "Directory to place unbuild component dependencies into.",
          "default": "./components",
          "type": "string"
        },
        "output": {
          "description": "Build configuration.",
          "type": "object",
          "properties": {
            "js": {
              "type": "string",
              "description": "Built JavaScript output.",
              "default": "./build/scripts"
            },
            "css": {
              "type": "string",
              "description": "Built CSS output.",
              "default": "./build/styles"
            },
            "less": {
              "type": "string",
              "description": "Compiled LESS output after being converted to CSS.",
              "default": "./build/styles"
            },
            "fonts": {
              "type": "string",
              "description": "Built fonts output.",
              "default": "./build/fonts"
            },
            "template": {
              "type": "string",
              "description": "Built template and views output.",
              "default": "./build/views"
            },
            "php": {
              "type": "string",
              "description": "PHP libraries are migrated and organized for autoloading PSR-0 packages.",
              "default": "./build/vendor"
            },
          }
        },
        "name": {
          "description": "Base name for build files defaulting to build.",
          "type": "string",
          "default": "build"
        },
        "minify": {
          "description": "Minify JavaScript and CSS builds.",
          "type": "boolean",
          "default": true
        },
        "provisioning": {
          "description": "Deploy packages directly to a server.",
          "type": "object",
          "properties": {
            "production": {
              "type": "object",
              "properties": {
                "env": {
                  "type": "object",
                  "properties": {
                    "HOST": {
                      "type": "string"
                    }
                  }
                },
                "ssh": {
                  "type": "object",
                  "properties": {
                    "hosts": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "port": {
                      "type": "number",
                      "default": 22
                    },
                    "user": {
                      "type": "string",
                      "default": "root"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Equivalent of Composer's 'require' property."
    },
    "fonts": {
      "type": "array",
      "description": "Reference to fonts.",
      "items": {
        "type": "string"
      }
    },
    "images": {
      "description": "Reference to images, icons srpites, etc.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "libs": {
      "description": "Reference to PHP libraries.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "scripts": {
      "description": "Reference to JavaScript libraries.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "styles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "templates": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "license": {
      "type": "string",
      "default": "MIT"
    }
  }
}